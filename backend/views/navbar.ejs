  <script>
    // Function to handle the dynamic display of the Page Type dropdown
    document.getElementById('parentPage').addEventListener('change', function () {
      const parentPageValue = this.value;
      const pageTypeContainer = document.getElementById('pageTypeContainer');

      // If 'None' is selected for parent page, show the page type dropdown
      if (parentPageValue === 'none') {
        pageTypeContainer.style.display = 'block';
      } else {
        pageTypeContainer.style.display = 'none';
      }
    });

    // Form submit handler
    async function submitForm(event) {
      event.preventDefault(); // Prevent the default form submission

      // Get form values
      const pageId = document.getElementById('page').value;
      const parentPage = document.getElementById('parentPage').value;
      const pageType = document.getElementById('pageType').value;
      const isPublished = document.getElementById('isPublished').checked;

      // Prepare the data to send to the API
      const formData = {
        isPublished: isPublished
      };

      // If parentPage is selected as 'None', send pageType as well
      if (parentPage === 'none') {
        formData.pageType = pageType;
      } else {
        formData.parentPage = parentPage;
      }

      try {
        const response = await fetch(`/admin/pages/status/${pageId}`, {
          method: 'PATCH', // Use PATCH to update resource
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (response.ok) {
          alert('Page status updated successfully!');
        } else {
          alert('Failed to update page status: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }
  </script>


