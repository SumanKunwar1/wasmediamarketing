                <!-- form start -->
                <form id="pageForm" enctype="multipart/form-data" onsubmit="submitForm(event)">
                  <!-- Select Parent Page -->
                  <div class="form-group">
                    <label for="page">Select Page:</label>
                    <select name="page" id="page">
                      <option value="" disabled selected>Select a page</option>
                      <% pages.forEach(page=> { %>
                        <option value="<%= page._id %>">
                          <%= page.title %>
                            (<%= page.parentId ? 'Subpage' : 'Main Page' %>)
                        </option>
                        <% }) %>
                    </select>
                  </div>

                  <div class="form-group">
                    <label for="parentPage">Select Parent Page:</label>
                    <select name="parentPage" id="parentPage">
                      <option value="" disabled selected>Select a parent page</option>
                      <option value="none">None</option>
                      <% pages.forEach(page=> { %>
                        <% if (!page.parentId && page.order===0) { %> <!-- Main Pages (parentId is null, order is 0) -->
                          <option value="<%= page._id %>">
                            <%= page.title %>
                          </option>
                          <% } %>
                            <% }) %>
                    </select>
                  </div>

                  <!-- If Parent Page is None, Show Page Type (Main Page or Footer Page) -->
                  <div class="form-group" id="pageTypeContainer" style="display:none;">
                    <label for="pageType">Page Type:</label>
