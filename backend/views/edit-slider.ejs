	<script>
		document.addEventListener("DOMContentLoaded", function () {
			const form = document.querySelector('#sliderForm');

			form.addEventListener('submit', function (event) {
				event.preventDefault(); // Prevent the default form submission

				const id = '<%= _id %>'; // Ensure that the ID is available here
				saveSlider(id); // Call the function to handle saving
			});

			function saveSlider(id) {
				const formData = new FormData(form);
				console.log('We are getting the data');

				// Log the form data for debugging purposes
				for (let [key, value] of formData.entries()) {
					console.log(`${key} = ${value}`);
				}

				// Convert form data into an object for JSON payload (optional)
				const jsonData = {};
				formData.forEach((value, key) => {
					jsonData[key] = value;
				});

				const url = `/admin/image/slider-edit/${id}`;

				// Send data as JSON
				fetch(url, {
					method: 'PATCH',
					headers: {
						'Content-Type': 'application/json', // Set content type for JSON
					},
					body: JSON.stringify(jsonData), // Convert object to JSON string
				})
					.then(response => response.json())
					.then(data => {
						if (data.message) {
							alert(data.message);
							form.reset(); // Reset form after successful submission
						} else {
							alert('Error: ' + data.error);
							console.log(data.error);
						}
					})
					.catch(error => {
						console.error('Error:', error);
						alert('There was an error submitting the form');
					});
			}
		});
	</script>
