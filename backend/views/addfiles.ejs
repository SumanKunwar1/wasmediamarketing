                          <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload me-2" style="margin-right: 10px;"></i>Upload Image
                          </button>
                        </form>
                      </div>
                    </div>

                    <!-- File Upload Form -->
                    <div class="col-md-6">
                      <div class="p-4 border rounded-3 bg-light">
                        <form id="fileUploadForm" action="/admin/Files/upload" method="POST"
                          enctype="multipart/form-data">
                          <h6 class="mb-3 text-secondary">Upload File</h6>
                          <div class="mb-3" style="margin-bottom: 10px;">
