                  <div class="row mb-4">
                    <!-- Image Upload Form -->
                    <div class="col-md-6">
                      <div class="p-4 border rounded-3 bg-light">
                        <form id="uploadForm" action="/admin/image/upload" method="POST" enctype="multipart/form-data">
