  <script>
    // Image upload validation and success message
    document.getElementById('uploadForm').addEventListener('submit', function (event) {
      event.preventDefault();  // Prevent form submission initially

      const imageInput = document.getElementById('image');
      const imageFile = imageInput.files[0];
      const validImageTypes = ['image/jpeg', 'image/png', 'image/jpg', 'image/webp'];

      if (!imageFile) {
        // If no image is selected
        Toastify({
          text: "Please select an image to upload.",
          duration: 3000,
          gravity: "top",
          close: true,
          position: "right",
          stopOnFocus: true,
          style: {
            background: "linear-gradient(to right, #da351a, #ddc913)",
          }
        }).showToast();
        return;
      }

      if (!validImageTypes.includes(imageFile.type)) {
        // Invalid image file type
        Toastify({
          text: "Invalid image file type! Please upload a PNG, JPG, JPEG, or WebP image.",
          duration: 3000,
          gravity: "top",
          close: true,
          position: "right",
          stopOnFocus: true,
          style: {
            background: "linear-gradient(to right, #e3391c, #770505)",
          }
        }).showToast();
        return;
      }

      // Proceed with form submission and show success message
      this.submit();  // Submit the form after successful validation
      Toastify({
        text: "Image uploaded successfully!",
        duration: 3000,
        gravity: "top", // `top` or `bottom`
        close: true,
        position: "right",
        stopOnFocus: true, // `left`, `center`, or `right`
        style: {
          background: "linear-gradient(to right, #1c66e3, #051347)",
        }
      }).showToast();
    });

    // File upload validation and success message
    const allowedFileTypes = [
      'text/css', 'text/plain', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
      'application/pdf', 'application/vnd.ms-excel', 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
      'application/vnd.ms-powerpoint', 'application/vnd.openxmlformats-officedocument.presentationml.presentation',
      'text/html', 'application/javascript', 'text/javascript'
    ];

    document.getElementById('fileSubmit').addEventListener('click', function (event) {
      const fileInput = document.getElementById('file');
      const file = fileInput.files[0];

      if (!file) {
        // If no file is selected
        Toastify({
          text: "Please select a file to upload.",
          duration: 3000,
          gravity: "top",
          close: true,
          position: "right",
          stopOnFocus: true,
          style: {
            background: "linear-gradient(to right, #da351a, #ddc913)",
          }
        }).showToast();
        return;
      }

      if (!allowedFileTypes.includes(file.type)) {
        // Invalid file type
        event.preventDefault();  // Prevent form submission
        Toastify({
          text: "Invalid file type! Please select a valid file type.",
          duration: 3000,
          gravity: "top",
          close: true,
          position: "right",
          stopOnFocus: true,
          style: {
            background: "linear-gradient(to right, #e3391c, #770505)",
          }
        }).showToast();
        return;
      }

      // Proceed with form submission and show success message
      Toastify({
        text: "File uploaded successfully!",
        duration: 3000,
        gravity: "top",
        close: true,
        position: "right",
        stopOnFocus: true,
        style: {
          background: "linear-gradient(to right, #1c66e3, #051347)",
        }
      }).showToast();
      // If needed, submit the form after successful validation
      document.getElementById('uploadForm').submit();
    });
  </script>

