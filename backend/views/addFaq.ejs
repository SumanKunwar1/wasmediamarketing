  <script>
    async function collectFaqFormData(event) {
      event.preventDefault();

      // Collect form field values
      const title = document.querySelector('input[name="title"]').value;
      const metaDescription = document.querySelector('textarea[name="metaDescription"]').value;
      const metaKeywords = document.querySelector('input[name="metaKeywords"]').value.split(',').map(keyword =>
        keyword.trim());
      const sectionTitle = document.querySelector('input[name="sectionTitle"]').value;
      const sectionDescription = document.querySelector('textarea[name="sectionDescription"]').value;
      const question = document.querySelector('textarea[name="question"]').value;
      const answer = document.querySelector('textarea[name="answer"]').value;

      // Prepare the data object to send
      const formData = {
        title, // Page title
        metaDescription, // Meta description
        metaKeywords, // Meta keywords (as an array)
        sectionTitle, // Section title
        sectionDescription, // Section description
        tabs: [{ question, answer }] // Array of question-answer pairs
      };

      console.log('Form Data:', formData);

      try {
        const response = await fetch('/admin/faq', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content'), // CSRF token from the meta tag
          },
          body: JSON.stringify(formData),
        });

        if (response.ok) {
          const result = await response.json();
          Toastify({
            text: "FAQ has been saved successfully!",
            duration: 3000,
            gravity: "top", // `top` or `bottom`
            close: true,
            position: "right",
            stopOnFocus: true, // `left`, `center`, or `right`
            style: {
              background: "linear-gradient(to right, #1c66e3, #051347)",
            }
          }).showToast();
          console.log('Server Response:', result);
        } else {
          const errorData = await response.json();
          Toastify({
            text: `There was an error saving the FAQ: ${errorData.message}`,
            duration: 3000,
            gravity: "top",
            close: true,
            position: "right",
            stopOnFocus: true,
            style: {
              background: "linear-gradient(to right, #e3391c, #770505)",
            }
          }).showToast();
        }
      } catch (error) {
        console.error('Error:', error);
        Toastify({
          text: "Failed to save FAQ. Please try again later.",
          duration: 3000,
          gravity: "top",
          close: true,
          position: "right",
          stopOnFocus: true,
          style: {
            background: "linear-gradient(to right, #da351a, #ddc913)",
          }
        }).showToast();
      }
    }

    document.querySelector('#faqForm').addEventListener('submit', collectFaqFormData);
  </script>

